@using RegistrationAndLogin.Controllers;
@{
    ViewBag.Title = "Forgot Password";
}

<h2>Forgot Password</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <hr />
        @if (ViewBag.Message == "Account not found")
        {
            <div class="text-danger">
                <strong>Fail! </strong> @ViewBag.Message
            </div>
        }
        else if (ViewBag.Message == "Reset password link has been sent to your email.")
        {
            <div class="text-success">
                <strong>Success! </strong> @ViewBag.Message
            </div>
        }
        else if (ViewBag.Message != "Account not found" && ViewBag.Message != "Reset password link has been sent to your email." && ViewBag.Message != null)
        {
            <div class="text-warning">
                <strong>Error! Exception! <br /> ViewBag.Message not displayed correctly!</strong>
                <br /> It is possible the that string message from the controller does not match the string Message from the View.
            </div>
        }

        <div class="form-group">
            <label class="control-label col-md-2">Email ID</label>
            @Html.TextBox("EmailID", "", new { @class = "form-control" })
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-success" />
            </div>
        </div>
    </div>
}

